<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Sign Up</title>
    <style>
        /* Global Body Styling */
        body {
            font-size: 1rem;
            background-color: #F5F5F5; /* Light Off White */
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Lora', serif;
            color: #0D1B2A; /* Deep Rich Black */
            padding-top: 70px; /* Adjusted for fixed navbar */
            overflow-x: hidden; /* Prevent horizontal scrolling */
        }

        /* Navbar */
        .navbar {
            position: fixed; /* Fixed navbar at the top */
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensure navbar stays above other content */
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: #c89f18 !important; /* Accent Color */
            font-weight: bold;
            transition: color 0.3s ease;
        }
        .navbar-brand:hover {
            color: #1F3B4D !important; /* Primary Color */
        }
        .nav-item .nav-link {
            color: #0D1B2A !important; /* Text Color */
            font-size: 1.1rem;
            padding: 8px 20px;
            transition: color 0.3s ease;
        }
        .nav-item .nav-link:hover {
            color: #D4AF37 !important; /* Accent Color */
        }
        .dropdown-item{
            color: #c89f18;
        }

        /* Form Container Styling */
        .form-container {
            width: 100%;
            max-width: 500px;
            background-color: #FFFFFF;
            padding: 30px;
            margin: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

        .form-container:hover {
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        }

        /* Form Styling */
        .form-label {
            font-weight: 500;
            color: #0D1B2A;
        }

        /* Input Styling */
        .form-control {
            border: 1px solid #A0A7B1;
            border-radius: 8px;
            padding: 10px;
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #007BFF;
        }

        /* Address Section Layout */
        .address {
            display: flex;
            gap: 15px;
        }

        .flex-fill {
            flex: 1;
        }

        /* Submit Button Styling */
        .btn-primary {
            background-color: #D4AF37; /* Gold */
            border: none;
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #B08C2F; /* Darker Gold */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-container {
                padding: 20px;
                margin: 10px;
            }

            .header h1 {
                font-size: 1.5rem;
            }

            .btn-primary {
                font-size: 1rem;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="#">Epic Engineers</a>

            <!-- Toggler button for mobile view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible Navbar -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Login Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Login</a>
                        <ul class="dropdown-menu" aria-labelledby="loginDropdown">
                            <li><a class="dropdown-item" href="/user/login">User</a></li>
                            <li><a class="dropdown-item" href="/services/login">Service Provider</a></li>
                        </ul>
                    </li>
                    <!-- Signup Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="signupDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Signup</a>
                        <ul class="dropdown-menu" aria-labelledby="signupDropdown">
                            <li><a class="dropdown-item" href="/user/signup">User</a></li>
                            <li><a class="dropdown-item" href="/services/signup">Service Provider</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Sign Up Form -->
    <div class="form-container">
        <h3 class="text-center mb-4">Sign Up As User</h3>
        <form action="/user/signup" method="POST">
            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="Enter Email" required>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Enter Password" required>
            </div>

            <!-- Contact Number -->
            <div class="mb-3">
                <label for="contactNumber" class="form-label">Contact Number</label>
                <input name="contactNumber" type="tel" class="form-control" id="contactNumber" placeholder="Enter Contact Number" required>
            </div>

            <!-- Address Section -->
            <div class="address mb-3">
                <div class="flex-fill">
                    <label for="street" class="form-label">Street</label>
                    <input name="address[street]" type="text" class="form-control" id="street" placeholder="Enter Street" required>
                </div>
                <div class="flex-fill">
                    <label for="city" class="form-label">City</label>
                    <input name="address[city]" type="text" class="form-control" id="city" placeholder="Enter City" required>
                </div>
                <div class="flex-fill">
                    <label for="state" class="form-label">State</label>
                    <input name="address[state]" type="text" class="form-control" id="state" placeholder="Enter State" required>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
