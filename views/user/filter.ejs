<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filter Service Providers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Filter Service Providers</h1>
        
        <form action="/user/filter" method="post">
            <div class="row mb-3">
                <!-- Service Category -->
                <div class="col-md-4">
                    <label for="serviceCategory" class="form-label">Service Category</label>
                    <select class="form-select" id="serviceCategory" name="serviceCategory" required>
                        <option value="" selected>Choose...</option>
                        <option value="Plumber">Plumber</option>
                        <option value="Electrician">Electrician</option>
                        <option value="Painter">Painter</option>
                        <option value="Beauty">Beauty</option>
                        <option value="Nursing Home">Nursing Home</option>
                        <!-- Add more categories as needed -->
                    </select>
                </div>

                <!-- State -->
                <div class="col-md-4">
                    <label for="state" class="form-label">State</label>
                    <select class="form-select" id="state" name="state" required>
                        <option value="" selected>Choose...</option>
                        <% for(provider of providers){ %>
                            <option value="<%= provider.serviceArea.state %>"><%= provider.serviceArea.state %></option>
                        <% } %>
                    </select>
                </div>

                <!-- Service Area (City) -->
                <div class="col-md-4">
                    <label for="serviceArea" class="form-label">City</label>
                    <select class="form-select" id="serviceArea" name="city" required>
                        <option value="" selected>Choose...</option>
                        <% for(provider of providers){ %>
                            <option value="<%= provider.serviceArea.city %>"><%= provider.serviceArea.city %></option>
                        <% } %>
                    </select>
                </div>

                <!-- Price -->
                <div class="col-md-4">
                    <label for="price" class="form-label">Price (Up to)</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Enter max price" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <!-- Results Section (to be populated dynamically) -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
