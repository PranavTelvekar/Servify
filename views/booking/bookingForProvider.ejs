<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center mb-4">Booking Details</h1>

        <!-- Confirmed bookings -->
        <div class="card mb-5 shadow">
            <div class="card-header bg-success text-white">
                <h2 class="h4">Confirmed Bookings</h2>
            </div>
            <div class="card-body">
                <% let confirmedFound = false; %>
                <% for(booking of bookings){ %>
                    <% if(booking.status == "Confirm"){ %>
                        <% confirmedFound = true; %>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <strong>Customer:</strong> <%= booking.user.username %>
                            </div>
                            <div class="col-md-5">
                                <strong>Problem:</strong> <%= booking.problemDescription %>
                            </div>
                            <div class="col-md-3">
                                <strong>Contact Number:</strong> <%= booking.user.contactNumber %>
                            </div>
                        </div>
                        <hr>
                    <% } %>
                <% } %>
                <% if (!confirmedFound) { %>
                    <p class="text-muted">No confirmed bookings available.</p>
                <% } %>
            </div>
        </div>

        <!-- Pending bookings -->
        <div class="card mb-5 shadow">
            <div class="card-header bg-warning text-dark">
                <h2 class="h4">Pending Bookings</h2>
            </div>
            <div class="card-body">
                <% let pendingFound = false; %>
                <% for(booking of bookings){ %>
                    <% if(booking.status == "Pending"){ %>
                        <% pendingFound = true; %>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <strong>Customer:</strong> <%= booking.user.username %>
                            </div>
                            <div class="col-md-5">
                                <strong>Problem:</strong> <%= booking.problemDescription %>
                            </div>
                            <div class="col-md-3">
                                <strong>Contact Number:</strong> <%= booking.user.contactNumber %>
                            </div>
                        </div>
                        <hr>
                    <% } %>
                <% } %>
                <% if (!pendingFound) { %>
                    <p class="text-muted">No pending bookings available.</p>
                <% } %>
            </div>
        </div>

        <!-- Canceled bookings -->
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="h4">Canceled Bookings</h2>
            </div>
            <div class="card-body">
                <% let canceledFound = false; %>
                <% for(booking of bookings){ %>
                    <% if(booking.status != "Confirm" && booking.status != "Pending"){ %>
                        <% canceledFound = true; %>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <strong>Customer:</strong> <%= booking.user.username %>
                            </div>
                            <div class="col-md-5">
                                <strong>Problem:</strong> <%= booking.problemDescription %>
                            </div>
                            <div class="col-md-3">
                                <strong>Contact Number:</strong> <%= booking.user.contactNumber %>
                            </div>
                        </div>
                        <hr>
                    <% } %>
                <% } %>
                <% if (!canceledFound) { %>
                    <p class="text-muted">No canceled bookings available.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
